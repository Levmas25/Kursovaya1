<Page x:Class="Kursovaya1.VedomostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VedomostPage">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Группа"/>
                    <Label Content="Дисциплина"/>
                    <Label Content="Дата"/>
                </StackPanel>
                <StackPanel>
                    <ComboBox x:Name="groupComboBox" />
                    <ComboBox x:Name="disciplineComboBox"/>
                    <DatePicker x:Name="dateDatePicker"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="createVedomost" Content="Создать" Click="createVedomost_Click"/>
        </StackPanel>
    </Grid>
</Page>
